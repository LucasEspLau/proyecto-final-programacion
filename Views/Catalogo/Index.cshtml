@model IEnumerable<trabajo_final_grupo_verde.Models.Producto>

@{
    ViewData["Title"] = "CATÁLOGO";
}

<body style="background-color: #F4F4F4;">
    <div class="container my-5">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>
        
        <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-6 col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@item.ImagenURL" alt="@item.Nombre" class="card-img-top" style="object-fit: cover; height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">Precio: @String.Format("{0:C}", item.Precio)</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Add", new { id = item.Id })" class="btn btn-primary">
                                <i class="fas fa-cart-plus"></i> Agregar a carrito
                            </a>
                            <a href="@Url.Action("Detalle", new { id = item.Id })" class="btn btn-info">
                                <i class="fas fa-info-circle"></i> Ver más
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</body>
