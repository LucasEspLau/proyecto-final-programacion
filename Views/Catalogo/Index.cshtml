@model IEnumerable<trabajo_final_grupo_verde.Models.Producto>
@{
    ViewData["Title"] = "CATÁLOGO";
}

<link rel="stylesheet" href="~/css/catalogo.css" />
<body style="background-color: #750D37;"><br><br>
  
  <div class="container1">
    <h1 class ="titulo" style="text-align: center;">@ViewData["Title"]</h1><br>
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-6 col-md-4" >
              <div class="card mb-3" style="box-shadow: 0 0 15px 0 rgba(0, 0, 0, 0.5);">
                <div class="card-body">
                  <div class="card-img-actions">
                      <img src="@item.ImagenURL" class="d-block w-100 image-fit">
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Precio)</p>
                  <a class="btn btn-primary btn-catalogo" asp-action="Add" asp-route-id="@item.Id">Agregar a carrito</a>
                  <a class="btn btn-info btn-catalogo " asp-action="Detalle" asp-route-id="@item.Id">Ver más</a>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>
  <br><br>
</body>
