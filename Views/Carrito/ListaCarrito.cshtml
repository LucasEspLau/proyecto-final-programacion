@model trabajo_final_grupo_verde.Controllers.CarritoController.CarritoViewModel

<style>
/* Estilo global para el cuerpo */
body {
    
    background-image: url("/images/imagen5.jpg");
    background-attachment: fixed;
    background-size: cover; /* Cubre el fondo completo */
}

/* Contenedor principal */
.container5 {
    max-width: 1200px; /* Ancho máximo */
    margin: auto;
    padding: 20px;
    background-color: white; /* Fondo blanco */
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); /* Sombra sutil */
    border-radius: 15px; /* Bordes redondeados */
}

/* Estilo para la cabecera del carrito */
.div-carrito {
    display: flex;
    justify-content: space-between; /* Espacia los elementos a ambos extremos */
    align-items: center;
    padding-bottom: 20px;
    border-bottom: 1px solid #ddd; /* Línea de separación */
    margin-bottom: 20px;
}

/* Estilo para los botones en la cabecera */
.div-carrito button {
    padding: 10px 15px;
    border-radius: 8px;
    background-color: #5D8AA8; /* Color de fondo azul claro */
    font-weight: bold; /* Texto en negrita */
    color: white; /* Color de texto blanco */
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3); /* Sombra sutil */
    transition: background-color 0.3s, box-shadow 0.3s; /* Animaciones de transición */
}

/* Cambio de estilo al pasar el ratón sobre los botones */
.div-carrito button:hover {
    background-color: #007FFF; /* Azul más intenso */
    box-shadow: 0 5px 12px rgba(0, 0, 0, 0.4); /* Sombra más definida */
}

/* Estilo para la tabla de productos */
.table {
    width: 100%; /* Ancho completo */
    border-collapse: collapse; /* Colapsar los bordes */
    margin-bottom: 20px;
    background-color: white; /* Fondo blanco */
}

/* Estilo para las celdas de la tabla */
.table th, .table td {
    padding: 12px; /* Espacio interno */
    border: 1px solid #ddd; /* Bordes de las celdas */
    text-align: left; /* Alineación del texto a la izquierda */
}

/* Estilo para la cabecera de la tabla */
.table th {
    background-color: #f4f4f4; /* Fondo gris claro */
    font-weight: bold; /* Texto en negrita */
}

</style><br>
<div class="container5">
    <div class="div-carrito">
        <h1 class="h1-carrito-title">Productos en el carrito</h1>
        <form asp-controller="Pagar" asp-action="Index">
            <button>Pagar</button>
        </form>
        <h1>Total a pagar: @Model.TotalCosto</h1>
    </div>
    @if (Model.Productos.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model.Productos)
                {
                    <tr>
                        <td>@producto.Nombre</td>
                        <td>
                            <img src="@producto.ImagenURL" alt="Imagen de @producto.Nombre" style="max-width: 100px; max-height: 100px;" />
                        </td>
                        <td>@producto.Descripcion</td>
                        <td>@producto.Precio</td>
                       
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay productos en el carrito.</p>
    }
</div>