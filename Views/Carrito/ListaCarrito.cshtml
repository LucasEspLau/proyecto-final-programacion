@model List<trabajo_final_grupo_verde.Models.Producto>

<h1>Productos en el carrito</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
                <th>Descripci√≥n</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Precio</td>
                    <td><img src="@producto.ImagenURL" alt="Imagen de @producto.Nombre" style="max-width: 100px; max-height: 100px;" /></td>
                    <td>@producto.Descripcion</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay productos en el carrito.</p>
}
