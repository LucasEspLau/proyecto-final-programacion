@model trabajo_final_grupo_verde.Models.Entity.Proforma

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/index.css" />

<style>
    /* Estilos personalizados para el fondo del cuadrado */
    .custom-box {
        background-color: #750D37; /* Color de fondo personalizado */
        color: white; /* Color del texto */
    }

    /* Estilos personalizados para el botón "Volver al Listado" */
    .custom-button {
        background-color: #750D37; /* Color de fondo personalizado */
        color: black; /* Color del texto */
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card custom-box"> <!-- Aplicar el estilo al cuadrado -->
                <div class="card-header">
                    <h3 class="text-center">Editar Producto</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Carrito" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserID" />
                        <input type="hidden" asp-for="Precio" />
                        <div class="form-group">
                            <label asp-for="Cantidad" class="control-label">Cantidad:</label>
                            <input asp-for="Cantidad" class="form-control" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            
                        </div>
                        <div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary custom-button" style="color: white;">Volver al Listado</a> <!-- Aplicar el estilo al botón -->
</div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
