@model trabajo_final_grupo_verde.Integration.currencyexchange.dto.TipoCambio

@{
    ViewData["Title"] = "TipoCambio";
}

<link rel="stylesheet" href="~/css/index.css" />

<style>
    /* Estilos para el contenedor */
    .custom-container {
        background-color: #750D37;
        padding: 20px;
        border-radius: 10px;
        color: white;
    }

    /* Estilos para los elementos del formulario */
    .form-label {
        color: white;
    }
</style>
<br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-container">
                <h1 class="text-center mb-4">Formulario de Tipo Cambio</h1>
                <form asp-controller="TipoCambio" asp-action="Exchange" method="post">
                    <div class="form-group">
                        <label asp-for="From" class="form-label"></label>
                        <input asp-for="From" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="To" class="form-label"></label>
                        <input asp-for="To" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="form-label"></label>
                        <input asp-for="Cantidad" class="form-control" />
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Exchange</button>
                    </div>
                </form>
                <h1 class="text-center mt-4">Tipo Cambio: @ViewData["rate"]</h1>
                <h1 class="text-center">Cambio Total: @ViewData["cambio"]</h1>
                <div class="text-center mt-3">
                    <a asp-action="Index" class="text-white">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
