@model IEnumerable<trabajo_final_grupo_verde.Models.Entity.Pedido>
@{
    ViewData["Title"] = "Pedido";  
}
<h1>   </h1>
<link rel="stylesheet" href="~/css/catalogo.css" />
<h1 style="text-align: center; font-weight: bold; font-family: Arial, sans-serif;"> Pedidos</h1>


<table class="table" style="background-color: #985972;"> 
    <thead>
        <tr>
            <th  style="text-align: right; font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th  style="font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">
            <th style="text-align: center; font-weight: bold; font-family: Arial, sans-serif; color:#750D37;" >
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th style=" font-weight: bold; font-family: Arial, sans-serif; color:#750D37;" >
            <th  style="text-align: left; font-weight: bold; font-family: Arial, sans-serif; color:#750D37;">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th style=" font-weight: bold; font-family: Arial, sans-serif; color:#750D37;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
            <td style="text-align: left; font-weight: bold; font-family: Arial, sans-serif; " >
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td style="text-align: center; font-weight: bold; font-family: Arial, sans-serif; ">
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td style="text-align: right; font-weight: bold; font-family: Arial, sans-serif; ">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>

            </td>
        </tr>
}
    </tbody>
</table>
