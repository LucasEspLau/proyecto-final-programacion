@{
    ViewData["Title"] = "Solicitar Cotización";
}
<style>
    .contact {
        padding: 80px 0;
        background-color: #f8f9fa;
    }

    .contact .heading {
        text-align: center;
        margin-bottom: 60px;
    }

    .contact .heading span {
        font-family: 'Montserrat', sans-serif;
    }

    .contact .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .contact .map {
        width: 100%;
        height: 400px;
        margin-bottom: 30px;
    }

    .contact form {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .contact form h3 {
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
    }

    .contact form .box {
        width: 100%;
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .contact form textarea {
        resize: vertical;
    }

    .contact form .btn {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .contact form .btn:hover {
        background-color: #0056b3;
    }

    .contact .alert {
        margin-top: 20px;
        padding: 10px;
        border-radius: 5px;
    }

    .alert-success {
        background-color: #28a745;
        color: #fff;
    }

    .map-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        margin-top: 150px;
    }
</style>
<link rel="stylesheet" href="~/css/contacto.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">
<section class="contact" id="contact">
    <h1 class="heading">
        <span>PONERSE EN CONTACTO CON NOSOTROS</span>
    </h1>

    <div class="container">
        <div class="row">
            <div class="col-6 map-container">
                <iframe class="map"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3901.5854482620507!2d-76.94473582703425!3d-12.072018542367156!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c6e79034dc63%3A0x393610bdc506718b!2sFacultad%20de%20Ingenier%C3%ADa%20y%20Arquitectura%20-%20USMP!5e0!3m2!1ses!2spe!4v1698767104135!5m2!1ses!2spe"
                    allowfullscreen="" loading="lazy">
                </iframe>
                @if (TempData["MessageCONTACTO"] != null)
                {
                    <div class="alert alert-success" id="MensajesVerdeRojo">
                        @TempData["MessageCONTACTO"]
                    </div>
                }
            </div>

            <div class="col-6">
                <form asp-controller="Home" asp-action="Create" method="post">
                    <h3>Ponerse En Contacto</h3>
                    <input type="text" placeholder="Nombre Completo" class="box" id="Nombre" name="Nombre" required>
                    <input type="email" placeholder="Correo electrónico" class="box" id="Email" name="Email" required>
                    <input type="number" placeholder="Número de Teléfono" class="box" id="Phone" name="Phone" required>
                    <input type="text" placeholder="Asunto" class="box" id="Asunto" name="Asunto" required>
                    <textarea placeholder="Mensaje" class="box" rows="10" cols="30" id="Mensaje" name="Mensaje"
                        required></textarea>
                    <input type="submit" value="Enviar Mensaje" class="btn">
                </form>

            </div>
        </div>
    </div>




</section>